
#----------------------------- Global Properties ----------------------------#

/outputDir:bin/$(Platform)
/intermediateDir:obj/$(Platform)
/platform:DesktopGL
/config:
/profile:Reach
/compress:False

#-------------------------------- References --------------------------------#

/reference:MonoGame.Extended.Content.Pipeline.dll
/reference:Monogame.Aseprite.Content.Pipeline.dll

#---------------------------------- Content ---------------------------------#

#begin Effects/HUDHealth.fx
/importer:EffectImporter
/processor:EffectProcessor
/processorParam:DebugMode=Auto
/build:Effects/HUDHealth.fx

#begin Effects/HUDHealthShader.fx
/importer:EffectImporter
/processor:EffectProcessor
/processorParam:DebugMode=Auto
/build:Effects/HUDHealthShader.fx

#begin Fonts/Arial.spritefont
/importer:FontDescriptionImporter
/processor:FontDescriptionProcessor
/processorParam:PremultiplyAlpha=True
/processorParam:TextureFormat=Compressed
/build:Fonts/Arial.spritefont

#begin Maps/Demo.tmx
/importer:TiledMapImporter
/processor:TiledMapProcessor
/build:Maps/Demo.tmx

#begin Maps/DemoMap.tmx
/importer:TiledMapImporter
/processor:TiledMapProcessor
/build:Maps/DemoMap.tmx

#begin Maps/ForestTileset.tsx
